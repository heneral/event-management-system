<!DOCTYPE html>
<html>
  <head>
    <title>Event Management System</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  </head>

  <body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="/">
          <%= image_tag "logo.svg", alt: "Event Management System", width: "40", height: "40", class: "me-2" %>
          <span class="fw-bold">Event Management System</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <%= link_to "Events", events_path, class: "nav-link" %>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "My Tickets", tickets_path, class: "nav-link" %>
              </li>
            <% end %>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-light nav-link", form_class: "d-inline" %>
              </li>
            <% else %>
              <li class="nav-item">
                <a href="#" class="nav-link" id="login-trigger">Login</a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <main class="flex-grow-1">
      <div class="container mt-4">
        <% if notice %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= notice %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>
        <% if alert %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= alert %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </main>

    <footer class="bg-dark text-light py-4 mt-auto">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h5 class="d-flex align-items-center mb-3">
              <%= image_tag "logo.svg", alt: "Event Management System", width: "32", height: "32", class: "me-2" %>
              <span>Event Management System</span>
            </h5>
            <p class="mb-0">Connect, create, and celebrate with our community events platform.</p>
          </div>
          <div class="col-md-3">
            <h6>Quick Links</h6>
            <ul class="list-unstyled">
              <li><%= link_to "Events", events_path, class: "text-light text-decoration-none" %></li>
              <% if user_signed_in? %>
                <li><%= link_to "My Tickets", tickets_path, class: "text-light text-decoration-none" %></li>
              <% end %>
            </ul>
          </div>
          <div class="col-md-3">
            <h6>Account</h6>
            <ul class="list-unstyled">
              <% if user_signed_in? %>
                <li><%= link_to "Profile", edit_user_registration_path, class: "text-light text-decoration-none" %></li>
                <li><%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-link text-light text-decoration-none p-0", form_class: "d-inline" %></li>
              <% else %>
                <li><%= link_to "Sign In", new_user_session_path, class: "text-light text-decoration-none" %></li>
                <li><%= link_to "Sign Up", new_user_registration_path, class: "text-light text-decoration-none" %></li>
              <% end %>
            </ul>
          </div>
        </div>
        <hr class="my-3">
        <div class="text-center">
          <small>&copy; 2025 Event Management System - Richard Sawanaka</small>
        </div>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="loginModalLabel">Login to Your Account</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= form_for(:user, url: session_path(:user), html: { class: "login-form" }) do |f| %>
              <div class="mb-3">
                <%= f.label :email, "Email", class: "form-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
              </div>

              <div class="mb-3">
                <%= f.label :password, "Password", class: "form-label" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
              </div>

              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
              </div>

              <div class="d-grid">
                <%= f.submit "Log in", class: "btn btn-primary" %>
              </div>
            <% end %>

            <div class="text-center mt-3">
              <small class="text-muted">
                Don't have an account?
                <%= link_to "Sign up", new_user_registration_path, class: "text-decoration-none ms-1" %>
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const loginTrigger = document.getElementById('login-trigger');
        const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));

        loginTrigger.addEventListener('click', function(e) {
          e.preventDefault();
          loginModal.show();
        });
      });
    </script>
  </body>
</html>
