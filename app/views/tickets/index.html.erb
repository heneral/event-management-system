<h1 class="mb-4">My Tickets</h1>

<div class="row">
  <% @tickets.each do |ticket| %>
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= ticket.event.title %></h5>
          <p class="card-text">Quantity: <%= ticket.quantity %></p>
          <p class="card-text"><small class="text-muted">Purchased on: <%= ticket.purchased_at.strftime('%B %d, %Y at %I:%M %p') %></small></p>
          <%= link_to "View Ticket", ticket, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @tickets.empty? %>
  <div class="alert alert-info">
    You haven't purchased any tickets yet. <%= link_to "Browse Events", events_path %>
  </div>
<% end %>

<div class="mt-3">
  <%= link_to "Buy New Ticket", new_ticket_path, class: "btn btn-primary" %>
</div>
