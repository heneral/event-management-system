<div class="h-auto">
  <div class="container-fluid">
    <div class="row">
      <!-- Left Column -->
      <div class="col-lg-6 d-none d-lg-flex align-items-start justify-content-center pt-5 pb-5 position-relative">
        <div class="text-center position-relative" style="width: 100%;">
          <%= image_tag "people-taking-part-high-protocol-event.jpg", class: "img-fluid rounded-3 shadow", style: "width: 100%; object-fit: contain; transition: transform 0.3s ease;", alt: "Events" %>
          <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center rounded-3" style="background: rgba(0, 0, 0, 0.4);">
            <div class="text-white text-center">
              <h2 class="display-5 fw-bold mb-3">Welcome Back</h2>
              <p class="lead">Continue your journey with EventHub</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Form Section -->
      <div class="col-lg-6 d-flex align-items-start justify-content-center p-4 pb-5 pt-5">
        <div class="w-100" style="max-width: 500px;">
          <!-- Mobile Header (shown only on small screens) -->
          <div class="text-center mb-4 d-lg-none">
            <i class="fas fa-users fa-3x text-primary mb-3"></i>
            <h2 class="h4 fw-bold text-dark mb-2">Welcome Back</h2>
            <p class="text-muted">Sign in to your EventHub account</p>
          </div>

          <!-- Form Card -->
          <div class="card shadow-lg border-0 rounded-4 overflow-hidden bg-white">
            <div class="card-body p-4 p-md-5">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <!-- Email Field -->
                <div class="mb-4">
                  <label for="user_email" class="form-label fw-semibold text-dark mb-3">
                    <i class="fas fa-envelope text-primary me-2"></i>Email Address
                  </label>
                  <div class="input-group input-group-lg">
                    <input type="email" class="form-control form-control-lg border-end-0 ps-3" placeholder="Enter your email address" required>
                    <span class="input-group-text bg-light">
                      <i class="fas fa-envelope text-muted"></i>
                    </span>
                  </div>
                </div>

                <!-- Password Field -->
                <div class="mb-4">
                  <label for="user_password" class="form-label fw-semibold text-dark mb-3">
                    <i class="fas fa-lock text-primary me-2"></i>Password
                  </label>
                  <div class="input-group input-group-lg">
                    <input type="password" class="form-control form-control-lg border-end-0 ps-3" placeholder="Enter your password" required>
                    <span class="input-group-text bg-light">
                      <i class="fas fa-lock text-muted"></i>
                    </span>
                  </div>
                </div>

                <!-- Remember Me -->
                <% if devise_mapping.rememberable? %>
                  <div class="mb-4">
                    <div class="form-check">
                      <%= f.check_box :remember_me, class: "form-check-input" %>
                      <%= f.label :remember_me, class: "form-check-label text-muted fw-semibold" %>
                    </div>
                  </div>
                <% end %>

                <!-- Submit Button -->
                <div class="d-grid mb-4">
                  <button type="submit" class="btn btn-primary btn-lg py-3 rounded-3 fw-semibold fs-5" data-disable-with="Signing In...">
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                  </button>
                </div>

                <!-- Forgot Password Link -->
                <div class="text-center mb-4">
                  <%= link_to "Forgot your password?", new_password_path(resource_name),
                    class: "text-primary text-decoration-none fw-semibold" %>
                </div>
              <% end %>
            </div>

            <!-- Footer Section -->
            <div class="card-footer bg-light border-0 text-center py-4">
              <p class="text-muted mb-3">Don't have an account?</p>
              <%= link_to "Create Account", new_registration_path(resource_name),
                class: "btn btn-outline-primary btn-lg px-5 py-2 rounded-3 fw-semibold" %>
            </div>
          </div>

          <!-- Additional Info -->
          <div class="text-center mt-4">
            <small class="text-muted">
              Discover and create amazing events with EventHub
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.input-group-text {
  border-radius: 0.375rem 0 0 0.375rem !important;
}

.form-control:focus {
  border-color: #0d6efd;
  box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
}

.btn-primary:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
  transition: all 0.3s ease;
}

.invalid-feedback {
  display: none;
}

.was-validated .form-control:invalid ~ .invalid-feedback {
  display: block;
}

@media (max-width: 991.98px) {
  .min-vh-100 {
    min-height: auto !important;
  }
}
</style>
